<!DOCTYPE html>
<html lang="en">
   <head>
      <title>Simple Websocket Chat</title>
      <link rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
      <link rel="stylesheet" type="text/css" href="/nodejs_chat.min.css">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
   <body>
      <div class="container">
         <header>
            <h1 class="text-center">Simple Websocket Chat</h1>
         </header>
         <div id="nicknameContainer" class="col-xs-3">
            <input type="text" placeholder="Enter nickname" id="nicknameInput" class="form-control">
         </div>
         <button id="nicknameSet" class="btn btn-primary">Enter</button>
         <div id="chatEntries" class="scrollable">
            <div class="chat"></div>
         </div>
         <div id="usersContainer" class="col-xs-6 col-sm-3 sidebar-offcanvas">
            <div id="users" class="list-group"></div>
         </div>
         <div id="roomsContainer" class="col-xs-6 col-sm-3 sidebar-offcanvas">
            <div id="rooms" class="list-group"></div>
         </div>
         <div class="clear"></div>
         <div id="chatControls" class="col-xs-8">
            <input type="text" id="messageInput" class="form-control">
         </div>
         <button id="submit" class="btn btn-primary">Send</button>
      </div>
      
      <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
      <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
      <script src="/socket.io/socket.io.js"></script>
      <script src="/nodejs_chat.min.js"></script>
   </body>
</html>