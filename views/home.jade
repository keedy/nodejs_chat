doctype 5
html(lang="en" ng-app="SimpleChat")
   head
      title Chat
      link(rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css")
      link(rel="stylesheet" type="text/css" href="style.css")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
   body
      div.container
         header
            h1(class="text-center") Simple Websockets chat v0.2
         div(class="col-xs-3")
            input(type="text" class="form-control" placeholder="Enter nickname")#nicknameInput
         button(class="btn btn-primary")#nicknameSet Enter
         div(class="scrollable")#chatEntries
         div#users
         div(class="clear")
         div(class="col-xs-8")#chatControls
            input(type="text" class="form-control")#messageInput
         button(class="btn btn-primary")#submit Send
   script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
   script(src="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js")
   script(src="/socket.io/socket.io.js")
   script(src="/script.js")