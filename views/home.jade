doctype 5
html
   head
      title Chat
   body
      div.container
         header
            h1 Simple Websockets chat v0.1
         span#nicknameLabel Nickname:
         input(type='text')#nicknameInput
         button#nicknameSet Enter
         div#chatEntries
         div#chatControls
            input(type='text')#messageInput
            button#submit Send
   script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
   script(src="/socket.io/socket.io.js")
   script(src="script.js")